{
  "manifest_version": 3,
  "name": "SecondView",
  "description": "Add community-sourced context to videos, time-stamped and accountable.",
  "version": "0.1",
  "permissions": ["scripting", "activeTab", "storage"],
  "action": {
    "default_icon": "icons/icon48.png",
    "default_title": "SecondView"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/contentScript.js"],
      "css": ["content/styles.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["popup/popup.html", "popup/popup.js", "popup/popup.css"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
