{
  "manifest_version": 3,
  "name": "SecondView",
  "description": "Add community-sourced context to videos, time-stamped and accountable.",
  "version": "0.1",
  "permissions": ["scripting", "activeTab", "storage"],
  "action": {
    "default_title": "SecondView"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content/contentScript.js"],
      "css": ["content/styles.css"]
    }
  ]
}
