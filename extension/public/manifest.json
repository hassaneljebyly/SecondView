{
  "manifest_version": 3,
  "name": "SecondView",
  "version": "0.1.0",
  "description": "SecondView is a Chrome extension that brings community-driven fact-checking to YouTube videos.",
  "icons": {
    "16": "./icons/logo_16px.png",
    "48": "./icons/logo_48px.png",
    "128": "./icons/logo_128px.png"
  },
  "action": {
    "default_icon": {
      "16": "./icons/logo_16px.png",
      "48": "./icons/logo_48px.png",
      "128": "./icons/logo_128px.png"
    },
    "default_title": "SecondView",
    "default_popup": "popup/second-view-popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content/second-view-content.js"],
      "css": ["content/second-view-content.css"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background/second-view-background.js"
  },
  "permissions": ["storage"],
  "host_permissions": ["<all_urls>"]
}
